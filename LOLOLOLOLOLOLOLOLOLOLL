-- External script (vortex.lua)

-- Fetch the hitbox size from the environment variable set in the main script
local hitboxSize = getgenv().HitboxSize

-- Example function to modify players' HumanoidRootPart size
game:GetService("RunService").RenderStepped:Connect(function()
    for _, v in next, game.Players:GetPlayers() do
        if v ~= game.Players.LocalPlayer and v.Character and v.Character:FindFirstChild("HumanoidRootPart") then
            -- Change the HumanoidRootPart size using the single hitbox size for all dimensions (x, y, z)
            v.Character.HumanoidRootPart.Size = Vector3.new(hitboxSize, hitboxSize, hitboxSize)
            
            -- Set CanCollide to false so you can walk through the character
            v.Character.HumanoidRootPart.CanCollide = false
        end
    end
end)
