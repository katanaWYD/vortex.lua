-- External Script (e.g., vortex.lua)
local hitboxSize = getgenv().HitboxSize

-- Example of modifying player's hitbox size and other actions
game:GetService("RunService").RenderStepped:Connect(function()
    for _, v in next, game.Players:GetPlayers() do
        if v ~= game.Players.LocalPlayer and v.Character and v.Character:FindFirstChild("HumanoidRootPart") then
            -- Apply hitbox size from the global variable
            v.Character.HumanoidRootPart.Size = hitboxSize
            -- Make the character walk-through by setting CanCollide to false
            v.Character.HumanoidRootPart.CanCollide = false
        end
    end
end)

-- You can add additional functionality here, such as aimbot, silent aim, or other features
